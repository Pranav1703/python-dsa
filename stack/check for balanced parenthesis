def isBalanced(exp):
    stack = []
    for x in exp:
        if x in ('(','{','['):
            stack.append(x)
        else:
            if not stack:
                return False
            elif isMatching(stack[-1],x) == False:
                return False
            else:
                stack.pop()
                
    if stack:                     #checking if stack is empty after checking for '(','{','[' in the loop
        return True                ususally the stack should be empty , if its noe empty then the experssion is not balanced
    else:
        return False
        

def isMatching(a,b):
    if (a=='(' and b == ')') or (a=='[' and b == ']') or (a=='{' and b == '}'):
        return True
    else:
        return False
        
    
